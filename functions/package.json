    "@types/qrcode": "^1.5.5",
    "@types/multer": "^1.4.11",
    "@types/compression": "^1.7.5",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.3.2",
    "eslint": "^8.55.0",
