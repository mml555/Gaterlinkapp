# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, '15.1'
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'GaterLinkNative' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/..",
    :hermes_enabled => false,
    :fabric_enabled => false
  )

  post_install do |installer|
    # https://github.com/facebook/react-native/blob/main/packages/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
    
    # Fix deployment target warnings and C++ compilation issues
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.1'
        
        # Fix C++ compilation issues with Xcode 16
        config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++17'
        config.build_settings['CLANG_CXX_LIBRARY'] = 'libc++'
        config.build_settings['GCC_C_LANGUAGE_STANDARD'] = 'c11'
        
        # Fix header search paths
        config.build_settings['HEADER_SEARCH_PATHS'] = '$(inherited) "$(SDKROOT)/usr/include/c++/v1" "$(SDKROOT)/usr/include" "$(SDKROOT)/System/Library/Frameworks"'
        
        # Fix non-modular include errors
        config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
        
        # Fix Hermes sandbox issues
        config.build_settings['ENABLE_BITCODE'] = 'NO'
        config.build_settings['OTHER_LDFLAGS'] = '$(inherited) -ObjC'
        
        # Fix C++ standard library issues
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] = '$(inherited) _LIBCPP_DISABLE_AVAILABILITY=1'
        
        # Additional flags for Xcode 16 compatibility
        config.build_settings['CLANG_CXX_FLAGS'] = '$(inherited) -std=c++17 -stdlib=libc++ -I"$(SDKROOT)/usr/include/c++/v1" -I"$(SDKROOT)/usr/include"'
        config.build_settings['OTHER_CPLUSPLUSFLAGS'] = '$(inherited) -std=c++17 -stdlib=libc++ -I"$(SDKROOT)/usr/include/c++/v1" -I"$(SDKROOT)/usr/include"'
        
        # Fix for SocketRocket specific issues
        if target.name == 'SocketRocket'
          config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++11'
          config.build_settings['CLANG_CXX_FLAGS'] = '$(inherited) -std=c++11 -stdlib=libc++'
          config.build_settings['OTHER_CPLUSPLUSFLAGS'] = '$(inherited) -std=c++11 -stdlib=libc++'
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] = '$(inherited) _LIBCPP_DISABLE_AVAILABILITY=1 COCOAPODS=1'
        end
        
        # Fix for leveldb and glog compilation issues
        if target.name == 'leveldb' || target.name == 'glog'
          config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++17'
          config.build_settings['CLANG_CXX_FLAGS'] = '$(inherited) -std=c++17 -stdlib=libc++'
          config.build_settings['OTHER_CPLUSPLUSFLAGS'] = '$(inherited) -std=c++17 -stdlib=libc++'
        end
        
        # Fix for React Native core components
        if target.name.start_with?('React-') || target.name.start_with?('RCT')
          config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++17'
          config.build_settings['CLANG_CXX_FLAGS'] = '$(inherited) -std=c++17 -stdlib=libc++ -I"$(SDKROOT)/usr/include/c++/v1" -I"$(SDKROOT)/usr/include"'
          config.build_settings['OTHER_CPLUSPLUSFLAGS'] = '$(inherited) -std=c++17 -stdlib=libc++ -I"$(SDKROOT)/usr/include/c++/v1" -I"$(SDKROOT)/usr/include"'
        end
      end
    end
  end
end
